<div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <h1 class="restaurant-details"><%= @restaurant.name %></h1>
  <h4 class="restaurant-details"><%= @restaurant.address %></h4>
  <p class="restaurant-details"><%= @restaurant.category %></p>
</div>


<ul class="list-group">
  <li class="list-group-item rating-list">
    <% @restaurant.reviews.each do |r| %>
      <p><%= r.content %></p>
      <p class="ratings">
        <% r.rating.times do %>
          <i class="fas fa-star" style="color: orange"></i>
        <% end %>
      </p>
    <% end %>
  </li>
</ul>
<%= link_to restaurants_path, class: 'btn btn-secondary m-3' do %>
  <i class="fas fa-backward" style="font-size: 24px">&nbsp;</i>Back to list
<% end %>

<h2 class="new-rating pt-2" style="border-top: 1px solid rgba(0, 0, 0, .2);">Add a new review for <%= @restaurant.name %></h2>

<%= render 'review_form' %>
